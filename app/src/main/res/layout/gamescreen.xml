     *
     */
    -->

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/background_image"
        android:scaleType="fitXY"
        android:src="@drawable/background_image" />

    <ImageView
        android:id="@+id/gamescreen"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:contentDescription="@string/spielfeld"
        android:src="@drawable/game" />

    <RelativeLayout
        android:id="@+id/menu_bar_ek10"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/whiteOP">

        <ImageView
            android:id="@+id/vector_ek123"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@id/vector_ek125"
            android:contentDescription="@string/settings"
            android:src="@drawable/vector_ek123" />

        <ImageView
            android:id="@+id/vector_ek127"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/vector_ek131"
            android:contentDescription="@string/exercise"
            android:src="@drawable/vector_ek127" />

        <ImageView
            android:id="@+id/vector_ek129"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@id/vector_ek127"
            android:contentDescription="@string/statistics"
            android:src="@drawable/vector_ek129" />

        <ImageView
            android:id="@+id/vector_ek131"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/home"
            android:src="@drawable/vector_ek131" />

        <ImageView
            android:id="@+id/vector_ek125"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:layout_toStartOf="@id/vector_ek131"
            android:alpha="0.5"
            android:contentDescription="@string/game"
            android:src="@drawable/vector_ek125" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gamescreen">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/erfahrungspunkte" />

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bar"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="0" />

        <TextView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="100" />

        <TextView
            android:id="@+id/herrlicher"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/speech_bubble_nine_patch_user"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/n_chstes_feld"
            android:layout_above="@id/bar" />

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:rcBackgroundColor="@color/calendar_range_middle_deactivated_bg"
            app:rcBackgroundPadding="4dp"
            app:rcMax="100"
            app:rcProgress="75"
            app:rcProgressColors="@array/sample_progress_gradient"
            app:rcRadius="30dp"
            app:rcTextPositionPriority="inside" />
    </RelativeLayout>

</RelativeLayout>