     *
     */
    -->

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/background_image"
        android:scaleType="fitXY"
        android:src="@drawable/background_image" />

    <RelativeLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/training_zusammenfassung"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <RelativeLayout
            android:id="@+id/rel_schritt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/neutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_toEndOf="@id/time"
                android:src="@drawable/sentiment_neutral"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_toEndOf="@id/time"
                android:src="@drawable/sentiment_satisfied"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_toEndOf="@id/time"
                android:src="@drawable/sentiment_very_dissatisfied"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/trainingsziel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/trainingsziel"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_toEndOf="@id/trainingsziel"
                android:fontFamily="@font/montserrat_regular"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_akt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel_schritt"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/frage_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/wie_ging_es_dir_bei_dem_training"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/emotions_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel_akt"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/neutral_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/good_1"
                android:src="@drawable/sentiment_neutral" />

            <ImageView
                android:id="@+id/good_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/sentiment_satisfied" />

            <ImageView
                android:id="@+id/bad_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/neutral_1"
                android:src="@drawable/sentiment_very_dissatisfied"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_akt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emotions_1"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/frage_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"

                android:fontFamily="@font/montserrat_regular"
                android:text="@string/musstes_du_fters_pausen_machen_oder_aussetzen"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/emotions_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel_akt_1"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/neutral_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/good_2"
                android:src="@drawable/sentiment_neutral" />

            <ImageView
                android:id="@+id/good_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/sentiment_satisfied" />

            <ImageView
                android:id="@+id/bad_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/neutral_2"
                android:src="@drawable/sentiment_very_dissatisfied"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_akt_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emotions_2"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/frage_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/basierend_auf_deiner_leistung_und_deinen_angaben_w_re_dies_der_vorschlag_f_r_deine_erfahrungspunkte"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/rel_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/frage_3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/points"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/edit_points"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text=" / 100"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/edit_points"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/montserrat_bold"
                    android:inputType="number"
                    android:text="XX "
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:visibility="invisible" />

            </RelativeLayout>

            <TextView
                android:id="@+id/frage_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel_points"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/du_kannst_diesen_vorschlag_bearbeiten_und_durch_deine_eigene_beurteilung_ersetzen"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@id/rel_akt_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle_2_shape"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/weiter"
            android:textColor="@color/log_in_color"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/save"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>