     *
     */
    -->

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/background_image"
        android:scaleType="fitXY"
        android:src="@drawable/background_image" />

    <RelativeLayout
        android:id="@+id/app_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp">

        <TextView
            android:id="@+id/mysport_ek1"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/mysport_ek1_string"
            android:textColor="@color/rectangle_2_color"
            android:textSize="28sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_fields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/password2"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@id/password1"
            android:layout_marginTop="10dp"
            android:autofillHints="password"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/password_ek1_hint_string"
            android:inputType="textPassword"
            android:textColor="@color/email_address_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/password1"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@id/email"
            android:layout_marginTop="10dp"
            android:autofillHints="password"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/password_ek1_string"
            android:inputType="textPassword"
            android:textColor="@color/email_address_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@id/nachname"
            android:layout_marginTop="10dp"
            android:autofillHints="emailAddress"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/email_address_string"
            android:inputType="textEmailAddress"
            android:textColor="@color/email_address_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/nachname"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@id/vorname"
            android:layout_marginTop="10dp"
            android:autofillHints="name"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/nachname_ek1_string"
            android:inputType="textPersonName"
            android:textColor="@color/email_address_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/vorname"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:autofillHints="name"
            android:fontFamily="Montserrat"
            android:hint="@string/vorname_ek1_string"
            android:inputType="textPersonName"
            android:textColor="@color/email_address_color"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_fields"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/register"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangle_2_shape"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/register_string"
            android:textColor="@color/log_in_color"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/error_field"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_below="@id/register"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/rectangle_50_color" />

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/register"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


</RelativeLayout>